public class Solution {
    public int solution(int n) {
        int answer = 0;
        int num=0;
        if(n/10==0){
            answer = n;
        }
        else{
            while(n/10!=0){
                num=n%10;
                n=n/10;
                answer+=num;
            }
            num=n%10;
            answer+=num;
        }
       
        return answer;
    }
}
