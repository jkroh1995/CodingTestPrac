class Solution {
    public String solution(String s) {
        String answer = "";

        if(s.length()%2!=0){
            char [] arr = new char[1];
            arr[0] = s.charAt(s.length()/2);
            answer = new String(arr);
        }
        else{
            char [] arr = new char[2];
            arr[0] = s.charAt(s.length()/2-1);
            arr[1] = s.charAt(s.length()/2);
            answer = new String(arr);
        }

        return answer;
    }
}
